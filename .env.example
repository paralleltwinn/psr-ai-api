# =============================================================================
# POORNASREE AI - ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this file to .env and update the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/database_name
TEST_DATABASE_URL=mysql+pymysql://username:password@localhost:3306/test_database_name

# =============================================================================
# CACHE & REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY & JWT CONFIGURATION
# =============================================================================
SECRET_KEY=change-this-to-a-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# SUPER ADMIN CONFIGURATION
# =============================================================================
SUPER_ADMIN_EMAIL=admin@yourcompany.com
SUPER_ADMIN_PASSWORD=ChangeThisPassword!

# =============================================================================
# EMAIL & SMTP CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=Your Company Name

# =============================================================================
# OTP & VERIFICATION CONFIGURATION
# =============================================================================
OTP_SECRET_KEY=your-32-character-otp-secret-key
OTP_EXPIRY_MINUTES=5

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Your Authentication System
APP_VERSION=1.0.0
APP_DESCRIPTION=Role-based authentication system
DEBUG=True
ENVIRONMENT=development

# =============================================================================
# API & CORS CONFIGURATION
# =============================================================================
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
